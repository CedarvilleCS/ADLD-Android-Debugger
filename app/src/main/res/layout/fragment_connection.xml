<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_bluetooth_status"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:gravity="center"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:orientation="vertical">

    <edu.cedarville.adld.common.view.TintedImageView
        android:id="@+id/img_bluetooth_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_bluetooth_black_48dp"/>

    <TextView
        android:id="@+id/label_bluetooth_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_connect_to_bluetooth"/>

</LinearLayout>
